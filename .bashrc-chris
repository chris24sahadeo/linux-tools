alias bashrc='source ~/.bashrc'

# Add git branch if its present to PS1
# Uncomment lines in .bashrc as specified here: https://askubuntu.com/questions/730754/how-do-i-show-the-git-branch-with-colours-in-bash-prompt
parse_git_branch() {
 git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/* \(.*\)/(\1)/'
}
if [ "$color_prompt" = yes ]; then
 PS1='${debian_chroot:+($debian_chroot)}\[\033[01;32m\]\u@\h\[\033[00m\]:\[\033[01;34m\]\w\[\033[01;31m\]$(parse_git_branch)\[\033[00m\]\$ '
else
 PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w$(parse_git_branch)\$ '
fi

# Aliases.
alias gcan='git commit --amend --no-edit'
alias gb='git branch'
alias gbd='git branch -D'
alias gk='gitk --all'
alias ga='git add'
alias gc='git commit'
alias gcm='git commit -m'
alias gch='git checkout'
alias gchb='git checkout -b'
alias gs='git status'
alias gph='git push'
alias gpl='git pull'
alias gd='git diff'

# cd and list directories
function cl {
  cd $1 && ll
}

# alias cd='cd && ll'
alias rm='rm -rf'
alias ping='ping -c 5'
alias unity='~/UnityHub.AppImage'
alias bashrc='. ~/.bashrc && echo ".bashrc reloaded!"'

# Reach.
MY_REACH_ROOT=~/virtana/project-reach
function rcd {
    # echo "$MY_REACH_ROOT/$1"
    cl "${MY_REACH_ROOT}/$1"
}

alias rc='rcd && code .'
alias rgo='rcd go/src/project-reach && code .'
alias rpush='git push origin HEAD:refs/for/master'
alias rls='reach ls'
alias gcloud-start='gcloud compute instances start calibration-sim-02'
alias gcloud-stop='gcloud compute instances stop calibration-sim-02'
alias gcloud-status='gcloud compute instances describe calibration-sim-02 | grep status'

. ${MY_REACH_ROOT}/setenv.sh

